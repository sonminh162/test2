<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/new_feed"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/header"
        android:background="#ffffffff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp99"/>

    <Spinner
        android:layout_marginStart="@dimen/dp16"
        android:layout_marginTop="@dimen/dp44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/spinner_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </Spinner>

    <View
        android:layout_marginEnd="@dimen/dp30"
        android:background="@drawable/ic_drop_down"
        app:layout_constraintEnd_toEndOf="@id/spinner_one"
        app:layout_constraintBottom_toBottomOf="@id/spinner_one"
        app:layout_constraintTop_toTopOf="@id/spinner_one"
        android:layout_width="@dimen/dp8"
        android:layout_height="@dimen/dp4"/>

    <TextView
        android:layout_marginStart="@dimen/dp26"
        android:textColor="@color/midnightExpress2_70percent"
        android:textSize="@dimen/sp14"
        android:fontFamily="sans-serif"
        android:text="@string/under_spinner"
        android:layout_marginTop="@dimen/dp5"
        app:layout_constraintTop_toBottomOf="@id/spinner_one"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:background="@drawable/ic_search"
        android:layout_marginEnd="@dimen/dp20"
        android:layout_marginTop="@dimen/dp62"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="@dimen/dp20"
        android:layout_width="@dimen/dp20" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/footer"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tabIndicatorGravity="top"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorHeight="@dimen/dp3"
        app:tabIndicatorColor="@color/cerise"
        app:tabMode="fixed"
        app:tabGravity="fill"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp62"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/main"
        app:layout_constraintBottom_toTopOf="@id/footer"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0" />

</androidx.constraintlayout.widget.ConstraintLayout>